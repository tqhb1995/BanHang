
@using WebBanQuanAo.Models;
@model IEnumerable<KhachHang>
@{
    ViewBag.Title = "XemChiTiet";
    Layout = "~/Views/Layout/AdminQuanTri.cshtml";
    WebGrid grid = new WebGrid(source: Model, rowsPerPage: 10);
}

<h2 style="font-weight:bold;text-align:center">Quản Lý Thành Viên</h2>
@grid.GetHtml(
            tableStyle: "table table-bordered table-condensed table-responsive",
            headerStyle: "gridHead",
            footerStyle: "gridHead",
            rowStyle: "gridRow",
            alternatingRowStyle: "gridAlter",
            columns: grid.Columns(
                        grid.Column("IdKH", "Khách hàng"),
                        grid.Column("TenKhachHang", "Tên khách hàng "),
                         grid.Column("DiaChi", "Tên khách hàng "),
                        grid.Column("Email", "Tên khách hàng "),
                         grid.Column("SoDienThoai", "Số điện thoại ")
                        ))





